<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.price_tracker.client.Controller">
    <TextField fx:id="inputField" prefHeight="25.0" prefWidth="280.0" promptText="Enter product's URL..." />
    <Button fx:id="myButton" mnemonicParsing="false" onAction="#handleAddProductButtonClick" text="Track" style="-fx-background-color: #808080;"/>
    <ImageView fx:id="ProductImageView" fitWidth="200.0" fitHeight="250.0" />
    <Label fx:id="nameLabel" visible="false" />
    <Label fx:id="priceLabel" visible="false" />
    <Label fx:id="urlLabel" visible="false" />
</VBox>
