<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="price_tracker.Controller">
  <ImageView fx:id="loginLogo" fitWidth="200.0" fitHeight="250.0" />
  <TextField fx:id="mailLogin" prefHeight="25.0" prefWidth="280.0" promptText="E-Mail Addresse" />
  <PasswordField fx:id="passwordLogin" prefHeight="25.0" prefWidth="280.0" promptText="Passwort" maskCharacter="*" />
  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButtonClick" text="Anmelden" style="-fx-background-color: #808080;"/>
  <Label fx:id="loginLabel" text="Jetzt Konto erstellen!" />
</VBox>